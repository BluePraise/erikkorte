                    "display": "block",
                    "sub_fields": [
                        {
                            "key": "field_text_content",
                            "label": "Content",
                            "name": "content",
                            "type": "wysiwyg",
                            "required": 1,
                            "tabs": "all",
                            "toolbar": "full",
                            "media_upload": 1
                        },
                        {
                            "key": "field_text_width",
                            "label": "Width",
