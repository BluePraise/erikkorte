                            "return_format": "url",
                            "library": "all"
                        },
                        {
                            "key": "field_gallery_columns",
                            "label": "Columns",
                            "name": "columns",
                            "type": "select",
                            "choices": {
                                "two": "2 Columns",
                                "three": "3 Columns"
                            },
                            "default_value": "three"
                        },
                        {
                            "key": "field_gallery_section_class",
                            "label": "Section Class (Optional)",
                            "name": "section_class",
