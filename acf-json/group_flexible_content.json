                "layout_two_column_block": {
                    "key": "layout_two_column_block",
                    "name": "two_column_block",
                    "label": "Two Column Block",
                    "display": "block",
                    "sub_fields": [
                        {
                            "key": "field_left_image",
                            "label": "Left Image",
                            "name": "left_image",
